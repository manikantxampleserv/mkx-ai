          "// Check if auth token is available",
          "const token = pm.collectionVariables.get('auth_token') || pm.environment.get('auth_token');",
          "",
          "if (!token && pm.request.url.path.some(path => !['health', 'auth', 'docs'].includes(path))) {",
          "    console.log('âš ï¸ No auth token found. Please login first.');",
          "} else if (token) {",
          "    pm.collectionVariables.set('auth_token', token);",
          "    console.log('ðŸ”‘ Using auth token:', token.substring(0, 20) + '...');",
          "}"
        ]
      }
    },
    {
      "listen": "test",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Global response logging",
          "console.log('ðŸ“¡ Request:', pm.request.method, pm.request.url.toString());",
          "console.log('ðŸ“Š Status:', pm.response.status, pm.response.code);",
          "console.log('â±ï¸ Time:', pm.response.responseTime + 'ms');",
          "",
          "// Handle authentication errors globally",
          "if (pm.response.code === 401) {",
          "    console.log('ðŸš« Authentication failed - Token may be expired or invalid');",
          "    console.log('ðŸ’¡ Try logging in again to get a fresh token');",
          "} else if (pm.response.code === 403) {",
          "    console.log('ðŸš« Access forbidden - Insufficient permissions');",
          "} else if (pm.response.code >= 500) {",
          "    console.log('ðŸ’¥ Server error - Check server logs');",
          "}"
        ]
