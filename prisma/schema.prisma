generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int        @id @default(autoincrement())
  name       String
  email      String     @unique
  password   String
  employees  Employee[] @relation("UserCreatedEmployees")
  created_at DateTime   @default(now())
  updated_at DateTime   @updatedAt
}

model Employee {
  id            Int      @id @default(autoincrement())
  first_name    String
  last_name     String
  email         String   @unique
  job_title     String
  department    String
  joining_date  DateTime
  status        String   @default("active")
  created_by    Int
  creator       User     @relation("UserCreatedEmployees", fields: [created_by], references: [id])
  created_at    DateTime @default(now())
  updated_at    DateTime @updatedAt
}

