generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  HR
  MANAGER
  EMPLOYEE
}

model User {
  id               Int        @id @default(autoincrement())
  name             String
  email            String     @unique
  password         String    
  role             Role       @default(EMPLOYEE)
  employee_id      Int?       @unique
  created_at       DateTime   @default(now())
  updated_at       DateTime   @updatedAt
  createdEmployees Employee[] @relation("UserCreatedEmployees")
  employee         Employee?  @relation("UserEmployee", fields: [employee_id], references: [id])
}

model Employee {
  id           Int      @id @default(autoincrement())
  first_name   String
  last_name    String
  email        String   @unique
  job_title    String
  department   String
  joining_date DateTime
  status       String   @default("active")
  created_by   Int
  created_at   DateTime @default(now())
  updated_at   DateTime @updatedAt
  user         User?    @relation("UserEmployee")
  creator      User     @relation("UserCreatedEmployees", fields: [created_by], references: [id], onDelete: Cascade)
}
